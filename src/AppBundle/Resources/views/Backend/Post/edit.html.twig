{% extends "@App/Backend/Layouts/backendInnerLayout.html.twig" %}
    {% block inner_content %}
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    edit
                    <small>{{ post.title }}</small>
                </h1>
                <div class='page-header'>
                    <ol class="breadcrumb">
                        <li>
                            <i class="fa fa-dashboard"></i> <a href="{{ path('app_backend_dashboard_index') }}">Dashboard</a>
                        </li>
                        <li class="active">
                            <i class="fa fa-edit"></i> edit post
                        </li>
                    </ol>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="form-group">
                    {{ form_errors(form) }}
                    <form action="{{ path('app_backend_post_edit',{'id':post.id}) }}"
                          method="POST" {{ form_enctype(form) }} role="form"
                          class='form form-horizontal' novalidate="novalidate" style='margin-bottom: 0;'>

                        <div class="form-group-lg'">
                            {{ form_widget(form) }}
                        </div>


                        <div class='center-block bottom col-lg-3'>
                            <button class='btn btn-success' type='submit'>
                                <i class='icon-plus'></i>
                                Save
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    {% endblock %}