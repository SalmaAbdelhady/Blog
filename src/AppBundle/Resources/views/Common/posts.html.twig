{% if data.items %}
    {% for post in data %}
        <article class="post margin-top-50 hentry" itemscope itemprop="blogPost">
            <header class="entry-header">
                <h2 class="entry-title" itemprop="headline"><a
                            href="{{ path('app_post_view_slug',{'slug':post.slug}) }}"
                            title="{{ post.title }}"
                            rel="bookmark"
                            itemprop="url">{{ post.title }}</a>
                </h2>
                {% include "@App/Common/postHead.html.twig" %}
            </header>

            <div class="entry-summary" itemprop="articleBody">
                <p>{{ post.content |raw }}</p>
                <a class="more button" href="{{ path('app_post_view_slug',{'slug':post.slug}) }}">Read
                    More</a>
            </div> <!-- .entry-summary -->
        </article> <!-- .post.summary -->
        <hr/>
    {% endfor %}
    <div class="pagination">
        {{ knp_pagination_render(data) }}
    </div> <!-- .pagination -->
{% else %}
    <div class="col-lg-12 alert alert-warning"> No Posts added</div>
{% endif %}

