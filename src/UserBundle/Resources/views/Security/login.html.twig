{% extends "@User/layout.html.twig" %}
{% block title %}Login{% endblock %}
{% block pageheader %}
    <div class="container margin-top-20">
        <div class="col-xs-12">
            <div class="breadcrumb-holder">
                <ol class="breadcrumb">
                    <li><a href="{{ path('homepage') }}">Home</a></li>
                    <li class="active"><a href="#">Login</a></li>

                </ol>
            </div>
        </div>
    </div>
{% endblock pageheader %}
{% block fos_user_content %}
    <div class="col-lg-12">
        <div class="col-lg-6">
            {% if error %}
                <span class="ui-state-error-text">{{ error.messageKey|trans(error.messageData, 'security') }}</span>
            {% endif %}
            <div>
                <form action="{{ path("fos_user_security_check") }}" method="post">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>

                    <div class=" field-row">
                        <input type="text" id="username" placeholder="User Name" name="_username"
                               value="{{ last_username }}" required="required"/>
                        <input type="password" id="password" name="_password" placeholder="Password"
                               required="required"/>
                    </div>

                    <div class="custom-checkbox-holder">
                        <input class="custom-checkbox" type="checkbox" id="remember_me" name="_remember_me" value="on"/>
                        <span>Remember me on this computer.</span>
                    </div>
                    <div class="field-row">
                        <button type="submit" class="button blue margin-top-10">Login Now</button>
                        <span class="F13">  OR <a href="{{ path("fos_user_resetting_request") }}">Forget
                                password?</a></span>
                    </div>
                </form>
            </div>
        </div>
        <!--/login form-->
        <div class="col-lg-2">

            <h2 class="or">OR</h2>
        </div>

        <div class="col-lg-4">

            <a type="button" class="btn button btn-large blue"
               href="{{ path('fos_user_registration_register') }}">Register Now</a>

        </div>

    </div>
{% endblock fos_user_content %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}